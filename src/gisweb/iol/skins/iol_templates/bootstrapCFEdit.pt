<div tal:define="block string:Global Variables bootrstrap:wf_iol_EDIT" tal:on-error="structure container/handleError">
<tal:def tal:define="
    size python:options['field'].getSettings('size') or str(255);
    title python:options['field'].title;
    ttip_title title;
    fieldname options/fieldname;
    fieldvalue options/fieldvalue;
    baseURL python: context.getParentDatabase().absolute_url();
    mandatory python: 'mandatory' if options['field'].getMandatory() else ''">

    <label class="control-label">
        <span tal:content="python:'%s: ' % title">Titolo</span>
    </label>
    <div class="input-append">
        <tal:plugin tal:content='structure string:<input type="text" name="${fieldname}" maxlenght="${size}" id="${fieldname}" data-base-url="${baseURL}" class="field span12" value="${fieldvalue}" />'></tal:plugin> 
        <span class="add-on btn" tal:attributes="id string:btn_${fieldname}">Calcola <i class="icon-edit"></i></span> 
    </div>

</tal:def>
</div>