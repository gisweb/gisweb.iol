<tal:def tal:define="    size python:options['field'].getSettings('size') or '';    title python:options['field'].title;    ttip_title title;    ttip_descr python:options['field'].Schema()['fieldDescription'].getAccessor(options['field'])();    id options/fieldname;">        <h4>            <span tal:content="title">Titolo</span>            <i tal:condition="ttip_descr" class="icon-info-sign" tal:attributes="title ttip_title;data-content ttip_descr"></i>        </h4>        <div class="row-fluid">        <div class="span6">            <select class="span12 selectop" tal:attributes="id string:${id}_op;name string:${id}_op;">                <option value="">Uguale a</option>                <tal:loop tal:repeat="op python: [('gg', 'Uguale a'), ('gg', 'Che contiene')]">                    <option tal:attributes="value python:op[0]"                    tal:content="python:op[1]">value</option>                </tal:loop>            </select>        </div>        <div class="span6" tal:define="widget python:options['field'].getSettings('widget');">            <tal:widget tal:condition="python:test(widget=='TEXT')">                <input type="text" tal:attributes="                    id options/fieldname;                    name options/fieldname;                    value options/fieldvalue;                    maxlength size;                    class string:field span12" />            </tal:widget>            <tal:widget tal:condition="python:test(widget=='TEXTAREA')">                <textarea tal:attributes="                    id options/fieldname;                    name options/fieldname;                     rows size;                    class string:field span12"                 tal:content="options/fieldvalue">text</textarea>            </tal:widget>            </div>         </div></tal:def>