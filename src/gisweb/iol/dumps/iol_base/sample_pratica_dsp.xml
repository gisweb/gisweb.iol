    db = context.getParentDatabase()
    #tipo_pratica = db.callScriptMethod('frm_events', 'genera_tipo_pratica', plominoDocument.getForm().getId())
    parent_id = context.REQUEST.get('parentDocument')
    parentDocument = db.getDocument(parent_id)
    #if 'rinnovo' in tipo_pratica and parentDocument:
    #    vecchia_fine = parentDocument.getItem('autorizzata_al') or default
    #    nuovo_inizio = vecchia_fine if vecchia_fine > default else default
    #    return  nuovo_inizio

return default]]></Formula>
