        <element id="autorizzata_al" title="Data di fine periodo" type="PlominoField">
          <id type="Products.Archetypes.Field.StringField">autorizzata_al</id>
          <FieldType type="Products.Archetypes.Field.StringField">DATE</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">EDITABLE</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[]]></Formula>
          <FieldReadTemplate type="Products.Archetypes.Field.StringField">bootstrapDateRead</FieldReadTemplate>
          <FieldEditTemplate type="Products.Archetypes.Field.StringField">bootstrapDatePicker</FieldEditTemplate>
          <Mandatory type="Products.Archetypes.Field.BooleanField">False</Mandatory>
          <ValidationFormula type="Products.Archetypes.Field.TextField"><![CDATA[# qui controllo semplicemente che la data inizio non sia posteriore alla data di fine
from gisweb.utils import lookForValidDate

fine = context.getItem('autorizzata_al')
inizio = context.getItem('autorizzata_dal')

if inizio and fine:

    # nel caso di rinnovo controllo che la durata complessiva non ecceda i 2 anni
    tipo_pratica = plominoDocument.getItem('tipo_pratica', '') or ''
    parentDocument = plominoDocument.getParentDatabase().getDocument(plominoDocument.getItem('parentDocument', ''))
    if parentDocument and 'rinnovo' in tipo_pratica:
        inizio = parentDocument.getItem('autorizzata_dal')
        fine_max = lookForValidDate(inizio.year()+2, inizio.month(), inizio.day(), timeargs=[0, 0, 0], start=1)
        if fine > fine_max:
            msg = """ATTENZIONE! La richiesta di rinnovo non può eccedere i due anni complessivi.
        L'ultima data accettata in questo caso è il %s.""" % fine_max.strftime('%d-%m-%Y')
            return msg

    else:
        if inizio >= fine:
            return 'ATTENZIONE! La data di fine periodo non può precedere o coincidere con quella di inizio.'

        fine_max = lookForValidDate(inizio.year()+1, inizio.month(), inizio.day(), timeargs=[0, 0, 0], start=1)
        if fine > fine_max:
            msg = """ATTENZIONE! Il periodo di autorizzazione richiesto non può eccedere un anno.
        L'ultima data accettata in questo caso è il %s.""" % fine_max.strftime('%d-%m-%Y')
            return msg

return '']]></ValidationFormula>
